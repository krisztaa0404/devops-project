{
  "id": null,
  "title": "Services Health Overview",
  "uid": "containers-health",
  "tags": ["services", "health", "infrastructure"],
  "style": "dark",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Elasticsearch Health",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "up{job=\"elasticsearch\"}",
          "legendFormat": "Elasticsearch",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Up"}}, "type": "value"}
          ]
        }
      }
    },
    {
      "id": 2,
      "title": "Prometheus Health",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "up{job=\"prometheus\"}",
          "legendFormat": "Prometheus",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Up"}}, "type": "value"}
          ]
        }
      }
    },
    {
      "id": 3,
      "title": "Spring Boot App Health",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "up{job=\"spring-boot-application\"}",
          "legendFormat": "Spring Boot",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Up"}}, "type": "value"}
          ]
        }
      }
    },
    {
      "id": 9,
      "title": "Kibana Health",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
      "datasource": {"type": "elasticsearch", "uid": "Elasticsearch"},
      "targets": [
        {
          "query": "*",
          "refId": "A",
          "bucketAggs": [
            {
              "id": "2",
              "type": "date_histogram",
              "settings": {
                "interval": "auto",
                "min_doc_count": 0,
                "trimEdges": 0
              },
              "field": "@timestamp"
            }
          ],
          "metrics": [
            {
              "id": "1",
              "type": "count"
            }
          ],
          "timeField": "@timestamp"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"pattern": "N/A", "result": {"text": "Down"}}, "type": "special"},
            {"options": {"min": 1, "result": {"text": "Up"}}, "type": "range"}
          ]
        }
      },
      "transformations": [
        {
          "id": "reduce",
          "options": {
            "reducers": ["lastNotNull"]
          }
        }
      ]
    },
    {
      "id": 4,
      "title": "Spring Boot CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "process_cpu_usage{job=\"spring-boot-application\"} * 100",
          "legendFormat": "CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "palette-classic"},
          "max": 100
        }
      }
    },
    {
      "id": 5,
      "title": "JVM Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{job=\"spring-boot-application\"}",
          "legendFormat": "Used - {{area}}",
          "refId": "A"
        },
        {
          "expr": "jvm_memory_max_bytes{job=\"spring-boot-application\"}",
          "legendFormat": "Max - {{area}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 6,
      "title": "Elasticsearch JVM Memory",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 14},
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "elasticsearch_jvm_memory_committed_bytes",
          "legendFormat": "Committed - {{type}}",
          "refId": "A"
        },
        {
          "expr": "elasticsearch_jvm_memory_max_bytes",
          "legendFormat": "Max - {{type}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 8,
      "title": "Application Uptime",
      "type": "stat",
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 22},
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "process_uptime_seconds{job=\"spring-boot-application\"}",
          "legendFormat": "Spring Boot Uptime",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"fixedColor": "blue"}
        }
      }
    }
  ]
}